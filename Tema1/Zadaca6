#include <stdio.h>
#include <math.h>
//Напиши програма каде што преку тастатура ќе може да се внесе еден број(а).
//Пронајдиа плоштината (А)според наведената формула и отпечатиго резултатот на екран.
int main()
{
    float a;
    scanf("%f", &a);

    float A =sqrt(3)/4 * pow(a,2);

    printf("The result is %f", A);

    return 0;
}
