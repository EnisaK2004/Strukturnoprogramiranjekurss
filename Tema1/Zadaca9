#include <stdio.h>
#include <math.h>

//Напиши програма каде што преку тастатура ќе може да се внесе еден број(r).
//Пронајдиа плоштината(C) и отпешати го резултатот на екран.
int main()
{
    float r;

    scanf("%f", &r);

    float c = 2*(M_PI)*r ;

    printf("The result is: %f", c);



    return 0;
}
